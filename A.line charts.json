{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "background":"#fff5eb",
  "title": "HFI Score Change by Time",
  "width": 900,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/Emily0410/FIT3179/main/hfi_cc_2019.csv"
  },
  "params":[
    {
      "name":"region",
      "bind":{
        "input": "select",
        "options": [
          null,
          "Caucasus & Central Asia",
          "East Asia",
          "Eastern Europe",
          "Latin America & the Caribbean",
          "Middle East & North Africa",
          "North America",
          "Oceania",
          "South Asia",
          "Sub-Saharan Africa",
          "Eastern Europe"
        ],
        "labels": [
          "show all",
          "Caucasus & Central Asia",
          "East Asia",
          "Eastern Europe",
          "Latin America & the Caribbean",
          "Middle East & North Africa",
          "North America",
          "Oceania",
          "South Asia",
          "Sub-Saharan Africa",
          "Eastern Europe"
        ],
        "name": "Region Selection:"
      }
    }
  ],
  "transform": [
    {"filter": "region == null || datum.region == region"}
  ],
  "layer":[
    {
      "selection": {
        "country_highlight": {
          "type": "multi",
          "fields": ["countries"],
          "bind": "legend"
        }
      },
      "mark": {"type": "line", "point": true},
      "encoding": {
        "x": {
          "timeUnit": "year", 
          "field": "year",
          "title": "Year",
          "axis": {"tickCount":"year"},
          "scale": {"domain" :[2007,2018]}
        },
        "y": {
          "field": "hf_score", 
          "type": "quantitative",
          "title": "Human Freedom Index"
        },
        "color": {"field": "countries", "type": "nominal","title": "Select Country"},
        "opacity": {
          "condition": {"selection": "country_highlight", "value": 1},
          "value": 0.1
        },
        "tooltip": [
          {"field": "countries", "type": "nominal", "title": "Country"},
          {"field": "hf_score","type": "quantitative","title": "HFI Score"},
          {"field": "hf_rank","type": "quantitative", "title": "Ranking"}
        ]
      }
    }
  ],
  "config": {}
}
